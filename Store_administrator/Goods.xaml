<Window x:Class="Store_administrator.Goods"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store_administrator"
        mc:Ignorable="d"
        Title="Goods" Height="920" Width="1280" Background="#ffdadada">
    <Grid >
        <Menu Background="Transparent"/>
        <Border x:Name="s1" MinWidth="1000" Background="White" VerticalAlignment="Top" Padding="10" MaxWidth="1200" CornerRadius="25" Height="869" HorizontalAlignment="Left" Width="1200" Margin="35,11,0,0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <DataGrid Margin="-1.6,8.4,-0.4,263.4" SelectionChanged="DataGrid_SelectionChanged" Background="#FFEDEDED" FontSize="18" FontStyle="Italic" FontWeight="Bold" HorizontalGridLinesBrush="#FF080707" VerticalGridLinesBrush="#FF030303" >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Views}" Header="№" Width="70"/>
                    <DataGridTextColumn Binding="{Binding Chanel}" Header="Название" Width="220"/>
                    <DataGridTextColumn Binding="{Binding Title}" Header="Объем" Width="120"/>
                    <DataGridTextColumn Binding="{Binding Title}" Header="Кол-во" Width="120"/>
                    <DataGridTextColumn Binding="{Binding Title}" Header="Цена" Width="120"/>
                    <DataGridTextColumn Binding="{Binding Title}" Header="Производитель" Width="250"/>
                    <DataGridTextColumn Binding="{Binding Title}" Header="Тип" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <Button Content="Добавить" Margin="73,631,950.6,202.4" Click="Button_Click" Height="Auto" FontSize="18"/>
        <Button Content="Удалить" Margin="357,631,666.6,202.4" Click="Button_Click" Height="Auto" FontSize="18"/>
        <Button Content="Сортировать по цене" Margin="933,631,90.6,202.4" Click="Button_Click" Height="Auto" FontSize="18"/>
        <Button Content="Сортировать по количеству" Margin="640,631,383.6,202.4" Click="Button_Click" Height="Auto" FontSize="18"/>
        <Button Content="Водка" Margin="73,713,950.6,120.4" Click="Button_Click" Height="Auto" FontSize="18"/>
        <Button Content="Коньяк" Margin="357,713,666.6,120.4" Click="Button_Click" Height="Auto" FontSize="18"/>
        <Button Content="Бальзам" Margin="640,713,383.6,120.4" Click="Button_Click" Height="Auto" FontSize="18"/>
        <Button Content="Вино" Margin="933,713,90.6,120.4" Click="Button_Click" Height="Auto" FontSize="18"/>
        <Button Content="Товары на складе" Margin="73,798,950.6,35.4" Click="Button_Click" Height="Auto" FontSize="18"/>
        <Button Content="Назад" Margin="933,798,90.6,35.4" Click="Button_Click" Height="Auto" Background="#FFFD3846" FontSize="24"/>
        <Button Content="Товары на складе" Margin="357,798,666.6,35.4" Click="Button_Click" Height="Auto" FontSize="18"/>

    </Grid>
</Window>
